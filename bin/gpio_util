#!/bin/bash

PIN="0"
DIRECTION="out"
ACTION=""
WAIT_FREQUENCY=0.1
MODE="out"

while getopts ":a:d:m:p:" opt; do
  case $opt in
    a)
      ACTION=$OPTARG
      ;;
    d)
      DIRECTION=$OPTARG
      ;;
    m)
      MODE=$OPTARG
      ;;
    p)
      PIN=$OPTARG
      ;;
  esac
done
shift $((OPTIND-1)) # Pop all getopts arguments out of the stack.

if [ "$PIN" = "0" ]; then
  echo "You must specify a pin with -p."
  exit 1
fi

gpio -g mode $PIN $MODE

if [ "$DIRECTION" = "out" ]; then
  gpio -g write $PIN $@
elif [ "$DIRECTION" = "in" ]; then
  if [ "$ACTION" = "wait_for_up" ]; then
    while [ "$(gpio -g read $PIN)" = "0" ]; do
      sleep $WAIT_FREQUENCY
    done
  elif [ "$ACTION" = "wait_for_down" ]; then
    while [ "$(gpio -g read $PIN)" = "1" ]; do
      sleep $WAIT_FREQUENCY
    done
  else
    echo "$(gpio -g read $PIN)"
  fi
fi

exit 0